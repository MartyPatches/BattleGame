                android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnBrChoice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
